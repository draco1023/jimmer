export org.babyfish.jimmer.sql.example.model.TreeNode
    -> package org.babyfish.jimmer.sql.example.service.dto

FlatTreeNodeView {

    /*
     * #allScalars: All scalar fields of `TreeNode` and `BaseEntity`
     *
     * #allScalars(TreeNode): All scalar fields of `TreeNode`, exclude `BaseEntity`
     */
    #allScalars(TreeNode)

    flat(parent) {
        as(^ -> parent) {
            #allScalars(TreeNode)
        }
        flat(parent) {
            as(^ -> grandParent) {
                #allScalars(TreeNode)
            }
        }
    }
}

input RecursiveTreeInput {
    name
    childNodes {
        name
    }* //'*' means recursive
}
