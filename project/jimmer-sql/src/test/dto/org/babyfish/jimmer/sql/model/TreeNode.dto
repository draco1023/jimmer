input RecursiveTree {
    name
    childNodes {
        name
    }* // '*' means recursive
}

input RecursiveTree2 {
    name
    childNodes {
        name
        childNodes {
            name
        }*
    }
}

input TreeNodeInput {
    #allScalars
    id!
    id(parent)
}

FlatTreeNode {
    #allScalars
    flat(parent) {
        as(^ -> parent) {
            #allScalars
        }
    }
}